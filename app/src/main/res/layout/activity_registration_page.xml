<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage">

    <TextView
        android:id="@+id/RegistrationPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee First Name"
        android:textSize="18dp"
        android:layout_below="@+id/RegistrationPage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Last Name"
        android:textSize="18dp"
        android:layout_below="@+id/firstname"
        android:layout_marginLeft="20dp"
       android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/BirthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Birth Year"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lastname"/>

    <TextView
        android:id="@+id/MonthlySalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Salary"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/BirthYear"/>
    <TextView
        android:id="@+id/OccupationRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation Rate"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/MonthlySalary"/>

    <TextView
        android:id="@+id/employeeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee ID"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/OccupationRate"/>
    <TextView
        android:id="@+id/EmployeeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Type"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/employeeId"/>

    <TextView
        android:id="@+id/T_bugs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#bugs"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EmployeeType"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/P_projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#projects"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EmployeeType"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/M_clients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Clients"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EmployeeType"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/SideCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Side Car"
        android:visibility="gone"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Vehicle"/>

    <TextView
        android:id="@+id/Vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EmployeeType"/>
    <TextView
        android:id="@+id/Cartype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Type"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Vehicle"/>



    <TextView
        android:id="@+id/VehicleModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Model"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Cartype"/>
    <TextView
        android:id="@+id/PlateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plate Number"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/VehicleModel"/>
    <TextView
        android:id="@+id/VehicleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Color"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/PlateNumber"/>

    <EditText
        android:id="@+id/editFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RegistrationPage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/firstname"
        android:background="#ddd"
        android:hint="  first name"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editFirstName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/firstname"
        android:background="#ddd"
        android:hint="  last name"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/birthyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLastName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/BirthYear"
        android:background="#ddd"
        android:hint="  birth year"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/monthlysalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthyear"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/BirthYear"
        android:background="#ddd"
        android:hint="  monthly salary"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/occupationrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/MonthlySalary"
        android:layout_below="@+id/monthlysalary"
        android:background="#ddd"
        android:textSize="18dp"
        android:hint="occupation rate" />

    <EditText
        android:id="@+id/employeeid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/employeeId"
        android:layout_below="@+id/OccupationRate"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="80dp"
        android:textSize="18dp"
        android:background="#ddd"
        android:hint="employee id" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Semployee_type"
        android:layout_toRightOf="@id/EmployeeType"
        android:layout_below="@id/employeeid"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:entries="@array/Emp_type"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbers"
        android:hint="numbers"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:visibility="gone"
        android:layout_below="@id/Semployee_type"
        android:layout_toRightOf="@id/EmployeeType"/>

    <RadioGroup
        android:id="@+id/RGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Semployee_type"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/Vehicle">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rb1"
            android:text="Car"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rb2"
            android:text="Motorbike"/>

    </RadioGroup>
    <RadioGroup
        android:id="@+id/RsideGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/RGroup"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/Vehicle">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rby1"
            android:text="Yes"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rbn2"
            android:text="No"/>

    </RadioGroup>


    <EditText
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/RsideGroup"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/VehicleModel"
        android:background="#ddd"
        android:textSize="18dp"
        android:hint="Model" />
    <EditText
        android:id="@+id/EditCarType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/RGroup"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/SideCar"
        android:background="#ddd"
        android:textSize="18dp"
        android:hint="Car Type" />

    <EditText
        android:id="@+id/vehiclemodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/EditCarType"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/VehicleModel"
        android:background="#ddd"
        android:textSize="18dp"
        android:hint="Model" />

    <EditText
        android:id="@+id/plateno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/VehicleModel"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/PlateNumber"
        android:background="#ddd"
        android:hint="plate number"
        android:textSize="18dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SVehicle_color"
        android:entries="@array/Veh_color"
        android:layout_toRightOf="@+id/VehicleColor"
        android:layout_below="@+id/plateno"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn"
        android:layout_below="@+id/SVehicle_color"
        android:layout_marginTop="20dp"/>




</RelativeLayout>